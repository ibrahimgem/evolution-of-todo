# Database Configuration
DATABASE_URL=postgresql+asyncpg://username:password@localhost:5432/todo_chatbot

# LLM API Configuration
# Option 1: Groq (Recommended - Free tier with fast inference)
GROQ_API_KEY=your-groq-api-key-here

# Option 2: OpenAI (Paid)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Option 3: Google Gemini (Not supported via OpenAI SDK)
# GEMINI_API_KEY=your-gemini-api-key-here

# LLM Model (Optional)
# Default for Groq: llama-3.1-70b-versatile
# Default for OpenAI: gpt-4o-mini
# Other Groq models: mixtral-8x7b-32768, llama-3.1-8b-instant, gemma2-9b-it
LLM_MODEL=

# JWT Secret Key (generate a secure random string)
SECRET_KEY=your-secret-key-for-jwt-tokens-change-in-production

# Application Settings
DEBUG=False
PORT=8000
